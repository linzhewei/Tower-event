<div class="text-center">
  <h1><%= @todo.title %></h1>
</div>

<div class="container">
    <div class="row col-md-12">
    <table class="table table-striped custab">
    <thead>
      <%= link_to("添加评论", new_team_project_todo_comment_path(@team, @project, @todo), class:"btn btn-primary btn-xs pull-right") %>
        <tr>
            <th>评论内容</th>
            <th>评论者</th>
            <th>时间</th>
        </tr>
    </thead>
        <% @comments.each do |comment| %>
          <tr>
            <th><%= comment.content  %></th>
            <th><%= comment.user.email %></th>
            <th><%= comment.created_at.strftime("%Y-%m-%d %R") %></th>
          </tr>
        <% end %>
    </table>
    </div>
</div>
